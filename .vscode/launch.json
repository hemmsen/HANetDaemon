{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Core Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            }
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/HemmsenHA/bin/Debug/net6.0/HemmsenHA.exe",
            "args": [],
            "cwd": "${workspaceFolder}/HemmsenHA",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Debug Apps",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net6.0/HemmsenHA.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DOTNET_ENVIRONMENT": "Development",
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "stopAtEntry": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Docker .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/HemmsenHA/HemmsenHA.csproj"
            }
        }
    ]
}